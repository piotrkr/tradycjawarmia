        <section class="contact" id="contact">

            <div class="contact">
                <div class="contact__content">

                    <!-- Lewa kolumna – dane kontaktowe -->
                    <div class="contact__left-side">

                        <div class="contact__detail contact__detail--address">
                            <i class="fas fa-map-marker-alt"></i>
                            <div class="contact__detail-topic">Adres</div>
                            <div class="contact__detail-text">
                                <span>Kościół</span> <br>Olsztyn, ul. Żniwna 7,<br>11-041 Olsztyn
                            </div>
                            <div class="contact__detail-text">
                                <span>Dom Św. Krzyża</span><br> ul. Nowowiejskiego 10 <br>10-162 Olsztyn
                            </div>
                        </div>

                        <div class="contact__detail contact__detail--phone">
                            <i class="fas fa-phone-alt"></i>
                            <div class="contact__detail-topic">Telefon</div>
                            <div class="contact__detail-text">
                                <!-- Numer jako obrazek SVG (klikalny) -->
                                <a href="tel:572903579">
                                    <svg width="180" height="30" viewBox="0 0 180 30" xmlns="http://www.w3.org/2000/svg"
                                        style="background:transparent;">
                                        <text x="40" y="20" font-family="Fauna One, serif" font-size="16"
                                            fill="#333">572 903 579</text>
                                    </svg>
                                </a>
                                <!-- Link do kopiowania -->
                            </div>
                        </div>

                        <div class="contact__detail contact__detail--email">
                            <i class="fas fa-envelope"></i>
                            <div class="contact__detail-topic">Email</div>
                            <div class="contact__detail-text">
                                <a href="mailto:ibp.warmia@gmail.com" class="contact__email-link">
                                    ibp.warmia@gmail.com
                                </a>
                            </div>
                        </div>

                    </div>

                    <!-- Prawa kolumna – formularz -->
                    <div class="contact__right-side">
                        <h2 class="contact__text">Wyślij wiadomość</h2>
                        <p class="contact__description">
                            Formularz kontaktowy (otworzy Twój program pocztowy):
                        </p>

                        <form class="contact__form" action="mailto:ibp.warmia@gmail.com" method="post"
                            enctype="text/plain" onsubmit="return prepareMailto(this);">
                            <div class="contact__input-box">
                                <input type="text" name="Imię i nazwisko" placeholder="Twoje imię i nazwisko"
                                    class="contact__input" required />
                            </div>

                            <div class="contact__input-box">
                                <input type="email" name="Email" placeholder="Twój adres email" class="contact__input"
                                    required />
                            </div>

                            <div class="contact__input-box contact__input-box--message">
                                <textarea name="Wiadomość" placeholder="Treść wiadomości"
                                    class="contact__input contact__input--textarea" required></textarea>
                            </div>

                            <div class="contact__button">
                                <input type="submit" value="Wyślij" class="contact__submit" />
                            </div>
                        </form>
                    </div>
                </div>
